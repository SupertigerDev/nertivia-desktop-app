    "publish": [
      {
        "provider": "github",
        "owner": "supertiger1234",
        "repo": "nertivia-desktop-app"
      }
    ],
    "files": [
      "**/*",
      "build/icon.ico"
    ]
  },
  "dependencies": {
    "electron-debug": "^3.0.1",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.9",
