{
  "name": "nertivia",
  "version": "0.3.10",
  "author": "",
  "description": "Nertivia - Chat Client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist-win": "electron-builder",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux",
    "publish-win": "electron-builder --win -p always",
    "publish-macos": "electron-builder --mac -p always -c.mac.identity=null"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^12.1.0",
    "electron-builder": "^22.6.1"
  },
  "build": {
    "appId": "nertivia.tk",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.png"
    },
		"linux": {
			"target": ["AppImage"],
			"category": "Network",
      "icon": "build/icon.png"
		},
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "files": [
      "**/*",
      "build/icon.ico",
      "build/notification_icon.ico",
      "build/icon.png",
      "build/notification_icon.png"
    ]
  },
  "dependencies": {
    "active-window-listener": "^1.1.3",
    "electron-store": "^7.0.2",
    "electron-updater": "^4.3.8"
  }
}
